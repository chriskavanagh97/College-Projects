def verify(isbn):
    isbn = list(isbn.replace('-', ''))

    if len(isbn) < 10:
        return False

    if isbn[-1].upper() == 'X':
        isbn[-1] = '10'

    total = 0
    for i in range(10):
        try:
            total += int(isbn[i])*(10-i)
        except ValueError:
            return False

    return total % 11 == 0
    
    ============================================================================================================================================
    def is_pangram(sentence):
    
    pangram ={'q','w','e','r','s','t','y','u','i','o','p','a','s','d','f','g','h','j','k','l','z','x','c','v','b','n','m'}
    
    for letters in pangram:
        if letters not in sentence.lower():
            return False
        continue 
    return True
    
