def hey(phrase):
    if phrase.isupper() and phrase.endswith('?'):
        return "Calm down, I know what I'm doing!"
    elif phrase.isupper():
        return "Whoa, chill out!"
    elif phrase.strip().endswith('?'):
        return 'Sure.'
    elif phrase.isspace() or len(phrase) == 0:
        return 'Fine. Be that way!'
    else:
        return'Whatever.'
 
