def distance(strand_a, strand_b):
    return sum(i != j for i, j in zip(strand_a, strand_b))
    
    ========================================================================================================
def abbreviate(text):
    titles_only = (c for c in text.title() if c.isupper())
    return ''.join(titles_only)



